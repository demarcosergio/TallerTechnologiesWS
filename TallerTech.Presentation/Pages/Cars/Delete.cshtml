@page "/delete"
@model TallerTech.Presentation.Cars.DeleteModel

<div class="container">
	<div class="row">
		<p class="text-danger">@Model.ErrorMessage</p>
	</div>
	<div class="row">
		<div class="col-md-3 m-3">
			<legend>Confirm To Delete</legend>
			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">@Model.CarVm.Make @Model.CarVm.Model @Model.CarVm.Year</h5>
					<h6 class="card-subtitle mb-2 text-muted">@Model.CarVm.Price $</h6>
					<p class="card-text">@Model.CarVm.Make</p>
					<p class="card-text">@Model.CarVm.Color</p>
					<form method="post">
						<button type="submit" class="btn btn-danger">Confirm Delete</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
